<div class="table-responsive">
  <table class="table table-striped schedule">
    <thead>
      <tr class="info">
        <th>Date</th>
        <th>Time-In</th>
        <th>Time-Out</th>
      </tr>
    </thead>

    <tbody>
      <% @child.attendances.each do |attendance| %>
        <tr>
          <td ><%= attendance.date %></td>
          <td ><%= time_format(attendance.time_in) %></td>
          <td><%= time_format(attendance.time_out) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>