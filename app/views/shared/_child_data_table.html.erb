<div class="table-responsive">
  <table class="table table-striped schedule">
    <thead>
      <tr class="info">
        <th>Date</th>
        <th>Time-In</th>
        <th>Time-Out</th>
      </tr>
    </thead>

    <tbody>
      <% @child.attendances.each do |attendance| %>
        <tr>
          <td ><%= attendance.date %></td>
          <td ><%= best_in_place(attendance, :time_in, display_with: lambda { |t| time_format(attendance.time_in) }, html_attrs: {datepicker: "true"}) %></td>
          <td><%= best_in_place(attendance, :time_out, display_with: lambda { |t| time_format(attendance.time_out) }, html_attrs: {datepicker: "true"}) %></td>
          <td><%= link_to 'Delete', attendance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>