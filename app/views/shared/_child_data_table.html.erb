<div class="table-responsive">
  <table class="table table-striped schedule">
    <thead>
      <tr class="info">
        <th>Date</th>
        <th>Time-In</th>
        <th>Time-Out</th>
        <th>Action</th>
      </tr>
    </thead>

    <tbody>
      <% @child.attendances.each do |attendance| %>
        <tr>
          <td><%= best_in_place attendance, :date, type: :date %></td>
          <td><%= best_in_place attendance, :time_in, display_with: lambda { |t| time_format(t).html_safe } %></td>
          <td><%= best_in_place attendance, :time_out, display_with: lambda { |t| time_format(t).html_safe } %></td>
          <td>
            <% if user_signed_in? %>
              <%= link_to 'Delete', attendance, method: :delete, data: { confirm: 'Are you sure you want to delete this attendance?' } %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
