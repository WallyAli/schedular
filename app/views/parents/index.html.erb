<div class="panel panel-primary">
   <div class="panel-heading">
      <h3 class="panel-title">List of All Parents</h3>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped schedule">
    <thead>
      <tr class="info">
        <th>Case Number</th>
        <th>First Name</th>
        <th>Middle Name</th>
        <th>Last Name</th>
        <th>Address</th>
        <th>city</th>
        <th>State</th>
        <th>Zip-Code</th>
        <th>Phone</th>
      </tr>
    </thead>
    <tbody>
      <% @parents.each do |parent| %>
        <tr>
          <td ><%= parent.case_number %></td>
          <td ><%= link_to parent.first_name, parent %></td>
          <td><%= parent.middle_name %></td>
          <td><%= link_to parent.last_name, parent %></td>
          <td><%= parent.address %></td>
          <td><%= parent.city %></td>
          <td><%= parent.state %></td>
          <td><%= parent.zipcode %></td>
          <td><%= number_to_phone(parent.phone, area_code: true) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

