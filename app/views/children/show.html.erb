<h3>Child Info.</h3>



<div id="attendances">
  <h2 id="month">
    <%= link_to "<", date: @date.prev_month %>
    <%= @date.strftime("%B %Y") %>   
    <%= link_to ">", date: @date.next_month %>
  </h2> 

    <%= attendance @date do |date| %>
      <%= date.day %>
    <% if @attendances_by_date[date] %>
    <ul>
      <% @attendances_by_date[date].each do |attendance| %>
        <li><%= attendance.date %></li>
      <% end %>
    </ul>
    <% end %>
  <% end %>
</div>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr class="info">
        <th>First name</th> 
        <th>Last name</th> 
        <th>Age</th>
        <th>Schedule</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @child.first_name %></td>
        <td><%= @child.last_name %></td>
        <td><%= @child.birthday %></td>
     
  
    <% @child.schedules.each do |schedule| %>
      <td><%= schedule.name %></td>
    <% end %>



      </tr>
    </tbody>
  </table>
</div>




<%= link_to 'Edit', edit_child_path(@child) %> |

