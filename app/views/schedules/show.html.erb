
<h3>Schedule</h3>
<div class="table-responsive">
  <table class="table table-striped table-bordered">
    <thead>
      <tr class="info">
        <th>Child Name</th> 
        
        <th>Time-In</th>
        <th>Sign-In</th>
        <th>Time-Out</th>
        <th>Sign-Out</th>
      </tr>
    </thead>

    <tbody>
      <h4><%= @schedule.name %> - <%= Date.today %></h4>
      <% @schedule.children.each do |child| %>
        <tr>
          <td ><%= link_to child_full_name(child), child %></td> 
          <td ><%= child.time_in %></td> 
          <td ><%= child.time_out %></td> 
          <td ></td>
          <td ></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>